@font-face {
	font-family: 'icomoon';
	src:url('fuentes/icomoon.eot?3yrsm4');
	src:url('fuentes/icomoon.eot?#iefix3yrsm4') format('embedded-opentype'),
		url('fuentes/icomoon.woff?3yrsm4') format('woff'),
		url('fuentes/icomoon.ttf?3yrsm4') format('truetype'),
		url('fuentes/icomoon.svg?3yrsm4#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-pen:before {
	content: "\e600";
	margin-right: 0.8em;
}

.icon-star-full:before {
	color #FFBE2C
	content: "\e9d9";
	margin-right: 0.4em;
	position: relative;
	top: .1em;
}

.icon-arrow-up:before {
	content: "\ea32";
	text-decoration: none;
}

.icon-arrow-down:before {
	color: #DD4F24;
	content: "\ea36";

}
 google-map 
    height 600px
  
a
	color #22BCE0
body
	background #EEEEEE
	//font-family 'Open Sans', sans-serif
	font-size 16px
header
	background #343B54
	color white
	overflow hidden
	padding 0.5em
	figure
		float left
	h1
		font-size 1.2em
		font-weight normal
		margin 1.4em 70px 0 4em
	#avatar
		margin 1em 0.5em 0 0
		position absolute
		right 0
		top 0
		img 
			border-radius 50%
			width 55px	
	#logo
		border-right 1px solid white
		margin-right 0.5em
		img					
			margin-right 0.5em
			padding-right 0.5em
			transition 1s
			width 52px
			&:hover
				transform rotate(360deg)	

footer
	background #22BCE0
	color rgba(255,255,255,0.7)
	padding 1em
	text-align center
	p:first-child
		margin-bottom 0
	p:last-child
		margin-top 0
	p:last-child:before
		content "- "		
	p:last-child:after
		content " -"

nav 
	background #7488CD
	box-shadow rgba(0,0,0,0.5) 0px 0px 10px
	padding 0 4em 0 0
	position relative
	ul
		list-style none
		margin 0
		padding 0	
		li
			display inline-block
			margin 0 1em 0 0
			a
				color white	
				display block
				padding 0.5em 
				transition .3s
				&:hover
					background #343B54	
		#publicar_nav		
			position absolute
			top -0.3em
			right 0
			a
				background #22BCE0
				border-radius 0.5em
				box-shadow rgba(0,0,0,0.5) 5px 5px 20px
				font-style italic
				padding 0.8em 0.5em 0.8em 3em 
				text-decoration none
				text-shadow rgba(0,0,0,0.5) 2px 2px 5px
				&:before
					left 0.5em
					position absolute
					top 0.7em
				&:hover
					&:before
						font-size 20px
aside
	display none

#contenido
	margin 1em
	.item
		background white
		border-bottom 3px solid #22BCE0
		margin-bottom 3em
		min-height 128px
		position relative
		.autor_item
			color #AAA
		.datos_item
			margin-top 1em 1em 0 0
			text-align right
			.fecha_item
				color #AAA
			.tag_item
				background #F4502A
				border-radius 0.5em
				color white
				display inline-block
				float left	
				padding 0.2em 0.5em
				text-decoration none
		.imagen_item
			float left
			margin 0 1em 0 0
			img 
				width 96px				
		.titulo_item
			font-size 1.2em
			font-style italic
			padding-top 1em 1em 0 0
			a
				color #444
				text-decoration none		
		.votacion
			background white
			border-radius 0 0 0.5em 0.5em
			left 5%		
			margin-top 3px
			padding 0.2em 0.5em
			position absolute
			top 100%
			width 80%
			.comentarios_item
			.guardar_item
				float right
				text-decoration none	
			.down
			.up
				text-decoration none	
#formulario
	padding 1em
	text-align right
	display none
	input
		border 1px solid #CCC
		border-radius 5px
		padding 0.2em 0.6em	
		&[type="submit"]
			background #22BCE0
			border-color #22BCE0
			box-shadow rgba(0, 0, 0, .5) 5px 5px 20px
			font-style italic
			text-shadow rgba(0, 0, 0, .5) 2px 2px 5px
			color white		
@media screen and (min-width: 800px)
	#contenido
		overflow hidden 
		.item
			float left
			width 49%			
			&:nth-child(odd) //solo los impares
				margin-right 2%	

@media screen and (min-width: 1000px)
	aside
		display block
		float right
		margin 1em	
		width 20%
		video
			width 100%			